{
	"name": "LSIBot",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:mortim59/LSIBot.git",
	"author": "WebD01 <liangu@protonmail.com>",
	"license": "MIT",
	"engines": {
		"node": "10"
	},
	"scripts": {
		"dev": "concurrently -k -n \"Typescript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon dist/index.js\"",
		"start": "tsc && node dist/index.js",
		"format": "prettier-tslint fix '**/*.ts'",
		"build": "npx tsc",
		"postinstall": "npm run build"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"discord.js": "^11.4.2",
		"graphql": "^14.0.2",
		"graphql-got": "^0.1.2",
		"graphql-tag": "^2.10.0",
		"typescript": "^3.2.2"
	},
	"devDependencies": {
		"@types/node": "^10.12.18",
		"concurrently": "^4.1.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.0",
		"nodemon": "^1.18.9",
		"prettier": "^1.15.3",
		"prettier-tslint": "^0.4.2",
		"tslint": "^5.12.0",
		"tslint-config-prettier": "^1.17.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.ts": ["prettier-tslint fix", "git add"]
	}
}
